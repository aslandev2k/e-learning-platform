{
  "name": "elp",
  "version": "1.0.0",
  "description": "E-Learning Platform — Hệ thống luyện tập lập trình trực tuyến",
  "author": "AsLan",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:fe": "turbo run dev --filter=@repo/frontend",
    "dev:be": "turbo run dev --filter=@repo/backend",
    "dev:docs": "turbo run dev:docs",
    "dev:scan": "cross-env VITE_ENABLE_SCAN=true turbo run dev",
    "clean": "turbo run clean && rimraf node_modules .turbo dist",
    "preview": "turbo run preview",
    "build": "turbo run build",
    "lint": "turbo run lint && biome lint .",
    "lint:fix": "biome lint . --fix",
    "format": "biome format .",
    "openapi": "turbo run openapi",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:migrate:dev": "turbo run db:migrate:dev",
    "db:reset:dev": "turbo run db:reset:dev",
    "db:studio:dev": "turbo run db:studio:dev",
    "db:reset:force": "turbo run db:reset:force"
  },
  "keywords": [
    "online-judge",
    "competitive-programming",
    "e-learning",
    "coding-platform"
  ],
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "cpy-cli": "^6.0.0",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7",
    "mkdirp": "^3.0.1",
    "rimraf": "^6.1.2",
    "tsx": "^4.21.0",
    "turbo": "^2.7.3",
    "typescript": "~5.9.3"
  },
  "dependencies": {
    "@ts-rest/core": "3.53.0-rc.1",
    "date-fns": "^4.1.0",
    "zod": "^4.3.5"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "24.10.9",
      "@ts-rest/core": "3.53.0-rc.1"
    }
  }
}

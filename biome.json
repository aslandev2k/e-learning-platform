{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "maxSize": 100000,
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.jsx",
      "**/*.tsx",
      "**/*.css",
      "**/*.json",
      "**/*.js",
      "**/*.html",
      "!**/routeTree.gen.ts",
      "!**/dist",
      "!**/node_modules",
      "!**/apps/backend/src/generated"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "includes": ["**", "!**/components/ui/*.tsx", "!**/clientAPI.config.ts"],
    "rules": {
      "style": { "noNonNullAssertion": "off" },
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "a11y": {
        "useButtonType": "off"
      },
      "security": {
        "noBlankTarget": "off"
      },
      "correctness": {
        "useParseIntRadix": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none",
      "enabled": true,
      "lineWidth": 100
    },
    "assist": {
      "enabled": true
    },
    "parser": { "allowTrailingCommas": false }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "recommended": true,
        "organizeImports": "on",
        "useSortedProperties": "on",
        "useSortedAttributes": "off",
        "useSortedKeys": "off"
      }
    }
  },
  "css": {
    "assist": { "enabled": true },
    "parser": {
      "tailwindDirectives": true
    },
    "formatter": { "enabled": true }
  },
  "html": {
    "formatter": { "enabled": true }
  }
}

{
  "name": "@repo/backend",
  "version": "1.0.0",
  "description": "Backend API for E-Learning Platform",
  "private": true,
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "clean": "rimraf node_modules src/generated",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:reset:dev": "prisma migrate reset --force",
    "db:studio:dev": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset:force": "prisma generate && prisma db push --force-reset && tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22",
    "@types/pg": "^8.16.0",
    "prisma": "^7.3.0",
    "tsx": "^4.19.4"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.3.0",
    "@repo/shared": "workspace:*",
    "@repo/zod-schemas": "workspace:*",
    "@ts-rest/express": "3.53.0-rc.1",
    "bcryptjs": "^3.0.3",
    "body-parser": "^2.2.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "express-session": "^1.19.0",
    "ioredis": "^5.9.3",
    "jsonwebtoken": "^9.0.3",
    "lru-cache": "^11.2.6",
    "pg": "^8.18.0",
    "uuid": "^13.0.0",
    "winston": "^3.19.0"
  }
}
